makeDraggable(MainFrame, TopBar)

function lib:Notify(msg, time)
    time = time or 2
    local notif = Instance.new("TextLabel")
    notif.Parent = ScreenGui
    notif.Size = UDim2.new(0, 320, 0, 38)
    notif.Position = UDim2.new(1, -340, 1, -60)
    notif.AnchorPoint = Vector2.new(0,1)
    notif.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
    notif.BackgroundTransparency = 0.09
    notif.Text = tostring(msg)
    notif.Font = Enum.Font.GothamBold
    notif.TextColor3 = Color3.fromRGB(255,255,255)
    notif.TextSize = 15
    notif.TextWrapped = true
    notif.BorderSizePixel = 0

    notif.Visible = true
    notif.TextTransparency = 1
    notif.BackgroundTransparency = 1
    notif:TweenPosition(UDim2.new(1, -340, 1, -90), "Out", "Back", .18, true)
    notif:TweenSize(UDim2.new(0, 320, 0, 38), "Out", "Back", .18, true)
    notif:TweenTransparency(0, .16)

    task.spawn(function()
        for i=1,10 do
            notif.TextTransparency = 1 - i*0.1
            notif.BackgroundTransparency = 1 - i*0.09
            wait(0.02)
        end
        wait(time)
        for i=1,10 do
            notif.TextTransparency = i*0.1
            notif.BackgroundTransparency = i*0.09
            wait(0.02)
        end
        notif:Destroy()
    end)
end

local function rainbowColor(speed)
    local t = tick()*speed
    return Color3.fromHSV((t%1),0.6,1)
end

local rainbowFrame = Instance.new("Frame")
rainbowFrame.Parent = MainFrame
rainbowFrame.Size = UDim2.new(1,0,0,2)
rainbowFrame.Position = UDim2.new(0,0,0,0)
rainbowFrame.BorderSizePixel = 0
rainbowFrame.BackgroundColor3 = Color3.fromRGB(100,100,255)

spawn(function()
    while rainbowFrame and rainbowFrame.Parent do
        rainbowFrame.BackgroundColor3 = rainbowColor(0.18)
        wait()
    end
end)

