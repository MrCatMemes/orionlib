    local textBox = Instance.new("TextBox")
    textBox.Parent = textFrame
    textBox.Size = UDim2.new(1,-18,1,0)
    textBox.Position = UDim2.new(0,9,0,0)
    textBox.BackgroundTransparency = 1
    textBox.Text = opts.Default or ""
    textBox.PlaceholderText = opts.Name or "Textbox"
    textBox.TextColor3 = Color3.fromRGB(230,230,230)
    textBox.Font = Enum.Font.Gotham
    textBox.TextSize = 15
    textBox.TextXAlignment = Enum.TextXAlignment.Left
    textBox.ClearTextOnFocus = opts.TextDisappear or false

    textBox.FocusLost:Connect(function(enter)
        if enter and opts.Callback then
            opts.Callback(textBox.Text)
        end
    end)
end

function section:AddKeybind(opts)
    local keyFrame = Instance.new("Frame")
    keyFrame.Parent = SectionFrame
    keyFrame.Size = UDim2.new(1,-20,0,30)
    keyFrame.BackgroundColor3 = Color3.fromRGB(47,53,62)
    keyFrame.BorderSizePixel = 0

    local keyLabel = Instance.new("TextLabel")
    keyLabel.Parent = keyFrame
    keyLabel.Position = UDim2.new(0,10,0,2)
    keyLabel.Size = UDim2.new(1,-38,1,-4)
    keyLabel.BackgroundTransparency = 1
    keyLabel.Text = opts.Name or "Keybind"
    keyLabel.TextColor3 = Color3.fromRGB(200,200,200)
    keyLabel.TextXAlignment = Enum.TextXAlignment.Left
    keyLabel.Font = Enum.Font.Gotham
    keyLabel.TextSize = 14

    local keyBtn = Instance.new("TextButton")
    keyBtn.Parent = keyFrame
    keyBtn.Position = UDim2.new(1,-26,0,5)
    keyBtn.Size = UDim2.new(0,18,0,18)
    keyBtn.BackgroundColor3 = Color3.fromRGB(110,110,110)
    keyBtn.Text = "..."
    keyBtn.TextColor3 = Color3.fromRGB(180,180,180)
    keyBtn.Font = Enum.Font.Gotham
    keyBtn.TextSize = 12

    local binding = false
    local key = Enum.KeyCode.F

    keyBtn.MouseButton1Click:Connect(function()
        binding = true
        keyBtn.Text = "_"
    end)
    game:GetService("UserInputService").InputBegan:Connect(function(inp, gp)
        if binding and inp.UserInputType == Enum.UserInputType.Keyboard then
            binding = false
            key = inp.KeyCode
            keyBtn.Text = key.Name
            if opts.Callback then opts.Callback(key) end
        elseif inp.KeyCode == key and not gp then
            if opts.Pressed then opts.Pressed() end
        end
    end)
    keyBtn.Text = key.Name
end

local UIS = game:GetService("UserInputService")

local function makeDraggable(frame, dragHandle)
    local dragging = false
    local dragStart, startPos

    dragHandle = dragHandle or frame

    dragHandle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)

    dragHandle.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = false
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            frame.Position = startPos + UDim2.new(0, delta.X, 0, delta.Y)
        end
    end)
end

function lib:MakeTab(opts)
    local tabButton = Instance.new("TextButton")
    tabButton.Parent = TabHolder
    tabButton.Size = UDim2.new(1,0,0,28)
    tabButton.Text = opts.Name or "Tab"
    tabButton.BackgroundColor3 = Color3.fromRGB(40,45,53)
    tabButton.TextColor3 = Color3.fromRGB(200,200,200)
    tabButton.Font = Enum.Font.Gotham
    tabButton.TextSize = 14
    tabButton.BorderSizePixel = 0

    local page = Instance.new("ScrollingFrame")
    page.Parent = Content
    page.Size = UDim2.new(1,0,1,0)
    page.CanvasSize = UDim2.new(0,0,0,0)
    page.BackgroundTransparency = 1
    page.ScrollBarThickness = 3
    page.Visible = false

    local UIList = Instance.new("UIListLayout")
    UIList.Parent = page
    UIList.Padding = UDim.new(0,10)
    UIList.SortOrder = Enum.SortOrder.LayoutOrder

    tabButton.MouseButton1Click:Connect(function()
        for _,pg in ipairs(Content:GetChildren()) do
            if pg:IsA("ScrollingFrame") then pg.Visible = false end
        end
        page.Visible = true
    end)

   
    if #Content:GetChildren() == 1 then
        page.Visible = true
        tabButton.TextColor3 = Color3.fromRGB(255,255,255)
    end

    return {
        AddSection = function(_, s)
            local sectionFrame = Instance.new("Frame")
            sectionFrame.Parent = page
            sectionFrame.Size = UDim2.new(1,-10,0,30)
            sectionFrame.BackgroundTransparency = 1

            local secLabel = Instance.new("TextLabel")
            secLabel.Parent = sectionFrame
            secLabel.Size = UDim2.new(1,0,1,0)
            secLabel.BackgroundTransparency = 1
            secLabel.Text = s.Name or "Section"
            secLabel.TextColor3 = Color3.fromRGB(100,160,255)
            secLabel.TextXAlignment = Enum.TextXAlignment.Left
            secLabel.Font = Enum.Font.GothamBold
            secLabel.TextSize = 15

            local holder = Instance.new("Frame")
            holder.Parent = page
            holder.Size = UDim2.new(1,-20,0,2)
            holder.BackgroundColor3 = Color3.fromRGB(60,70,86)
            holder.BorderSizePixel = 0

            local elementHolder = Instance.new("Frame")
            elementHolder.Parent = page
            elementHolder.Size = UDim2.new(1,-10,0,0)
            elementHolder.BackgroundTransparency = 1

            local elemLayout = Instance.new("UIListLayout")
            elemLayout.Parent = elementHolder
            elemLayout.Padding = UDim.new(0,8)

            return createSection(elementHolder)
        end
    }
end

