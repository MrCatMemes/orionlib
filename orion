local fps = 0
spawn(function()
    while true do
        local last = tick()
        wait(1)
        fps = math.floor(1/(tick()-last))
        watermark.Text = ("YOURORION | %s | %d FPS"):format(game.Players.LocalPlayer.Name, fps)
    end
end)

local HttpService = game:GetService("HttpService")

local function saveSettings(settingsTable, name)
    if not name then name = "settings" end
    writefile(name..".json", HttpService:JSONEncode(settingsTable))
end

local function loadSettings(name)
    if not name then name = "settings" end
    if isfile(name..".json") then
        return HttpService:JSONDecode(readfile(name..".json"))
    else
        return {}
    end
end

local Accent = Color3.fromRGB(90,170,255) 
