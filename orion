local YourOrion = {}
YourOrion.__index = YourOrion

function YourOrion:CreateWindow(options)
    local self = setmetatable({}, YourOrion)
    self.Name = options.Name or "YourOrion Window"
    self.Tabs = {}

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = self.Name
    ScreenGui.Parent = game:GetService("CoreGui")
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.ResetOnSpawn = false

    local Main = Instance.new("Frame")
    Main.Name = "Main"
    Main.Size = UDim2.new(0, 520, 0, 380)
    Main.Position = UDim2.new(0.5, -260, 0.5, -190)
    Main.BackgroundColor3 = Color3.fromRGB(35, 40, 49)
    Main.BorderSizePixel = 0
    Main.AnchorPoint = Vector2.new(0.5, 0.5)
    Main.Parent = ScreenGui


    local TabButtons = Instance.new("Frame")
    TabButtons.Name = "TabButtons"
    TabButtons.Parent = Main
    TabButtons.Size = UDim2.new(1, 0, 0, 38)
    TabButtons.Position = UDim2.new(0,0,0,0)
    TabButtons.BackgroundTransparency = 1

    local TabsList = Instance.new("UIListLayout")
    TabsList.FillDirection = Enum.FillDirection.Horizontal
    TabsList.SortOrder = Enum.SortOrder.LayoutOrder
    TabsList.Padding = UDim.new(0, 8)
    TabsList.Parent = TabButtons

    
    local TabContent = Instance.new("Frame")
    TabContent.Name = "TabContent"
    TabContent.Parent = Main
    TabContent.BackgroundTransparency = 1
    TabContent.Size = UDim2.new(1, 0, 1, -38)
    TabContent.Position = UDim2.new(0, 0, 0, 38)

    self.ScreenGui = ScreenGui
    self.Main = Main
    self.TabButtons = TabButtons
    self.TabContent = TabContent
    self._currentTab = nil

    function self:MakeTab(tabInfo)
        local tab = {
            Sections = {},
            Name = tabInfo.Name,
            ParentLib = self
        }

        
        local TabButton = Instance.new("TextButton")
        TabButton.Parent = TabButtons
        TabButton.Size = UDim2.new(0, 100, 1, 0)
        TabButton.BackgroundColor3 = Color3.fromRGB(43, 49, 60)
        TabButton.TextColor3 = Color3.new(1,1,1)
        TabButton.Font = Enum.Font.GothamBold
        TabButton.TextSize = 16
        TabButton.Text = tabInfo.Name
        TabButton.AutoButtonColor = true

     
        local SectionHolder = Instance.new("Frame")
        SectionHolder.Name = "SectionHolder"
        SectionHolder.Parent = TabContent
        SectionHolder.Visible = false
        SectionHolder.Size = UDim2.new(1,0,1,0)
        SectionHolder.BackgroundTransparency = 1

        local SectionList = Instance.new("UIListLayout")
        SectionList.Parent = SectionHolder
        SectionList.Padding = UDim.new(0, 12)
        SectionList.SortOrder = Enum.SortOrder.LayoutOrder

        TabButton.MouseButton1Click:Connect(function()
            for _, t in pairs(self.Tabs) do
                t.SectionHolder.Visible = false
            end
            SectionHolder.Visible = true
        end)

        tab.SectionHolder = SectionHolder

        function tab:AddSection(sectionInfo)
            local section = {
                Name = sectionInfo.Name,
                Elements = {},
                ParentTab = tab
            }

            local SectionFrame = Instance.new("Frame")
            SectionFrame.Parent = SectionHolder
            SectionFrame.Size = UDim2.new(1,-18,0,1)
            SectionFrame.BackgroundColor3 = Color3.fromRGB(41, 46, 54)
            SectionFrame.BorderSizePixel = 0
            SectionFrame.AutomaticSize = Enum.AutomaticSize.Y

            local SectionLabel = Instance.new("TextLabel")
            SectionLabel.Parent = SectionFrame
            SectionLabel.Text = sectionInfo.Name
            SectionLabel.BackgroundTransparency = 1
            SectionLabel.TextColor3 = Color3.new(1,1,1)
            SectionLabel.Font = Enum.Font.GothamBold
            SectionLabel.TextSize = 15
            SectionLabel.Position = UDim2.new(0,8,0,2)
            SectionLabel.Size = UDim2.new(1,-16,0,22)
            SectionLabel.TextXAlignment = Enum.TextXAlignment.Left

            local SectionListLayout = Instance.new("UIListLayout")
            SectionListLayout.Parent = SectionFrame
            SectionListLayout.Padding = UDim.new(0, 7)
            SectionListLayout.SortOrder = Enum.SortOrder.LayoutOrder
            SectionListLayout.FillDirection = Enum.FillDirection.Vertical

            function section:AddButton(opts)
                local btn = Instance.new("TextButton")
                btn.Parent = SectionFrame
                btn.Size = UDim2.new(1,-20,0,30)
                btn.Position = UDim2.new(0,10,0,0)
                btn.BackgroundColor3 = Color3.fromRGB(51,56,67)
                btn.Text = opts.Name
                btn.TextColor3 = Color3.fromRGB(240,240,240)
                btn.Font = Enum.Font.Gotham
                btn.TextSize = 15
                btn.AutoButtonColor = true
                btn.MouseButton1Click:Connect(function()
                    if opts.Callback then opts.Callback() end
                end)
            end

            function section:AddToggle(opts)
                local ToggleFrame = Instance.new("Frame")
                ToggleFrame.Parent = SectionFrame
                ToggleFrame.Size = UDim2.new(1,-20,0,30)
                ToggleFrame.BackgroundColor3 = Color3.fromRGB(47,53,62)
                ToggleFrame.BorderSizePixel = 0

                local ToggleBtn = Instance.new("TextButton")
                ToggleBtn.Parent = ToggleFrame
                ToggleBtn.Size = UDim2.new(0,24,0,24)
                ToggleBtn.Position = UDim2.new(0,5,0,3)
                ToggleBtn.BackgroundColor3 = Color3.fromRGB(72,205,96)
                ToggleBtn.Text = ""
                ToggleBtn.AutoButtonColor = false
                ToggleBtn.BorderSizePixel = 0

                local ToggleLabel = Instance.new("TextLabel")
                ToggleLabel.Parent = ToggleFrame
                ToggleLabel.Position = UDim2.new(0,36,0,3)
                ToggleLabel.Size = UDim2.new(1,-36,1,-6)
                ToggleLabel.BackgroundTransparency = 1
                ToggleLabel.TextColor3 = Color3.fromRGB(230,230,230)
                ToggleLabel.Font = Enum.Font.Gotham
                ToggleLabel.TextSize = 15
                ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
                ToggleLabel.Text = opts.Name

                local toggled = opts.Default or false
                local function setToggled(state)
                    toggled = state
                    if toggled then
                        ToggleBtn.BackgroundColor3 = Color3.fromRGB(72,205,96)
                    else
                        ToggleBtn.BackgroundColor3 = Color3.fromRGB(110,110,110)
                    end
                    if opts.Callback then opts.Callback(toggled) end
                end
                ToggleBtn.MouseButton1Click:Connect(function()
                    setToggled(not toggled)
                end)
                setToggled(toggled)
            end

            function section:AddLabel(text)
                local label = Instance.new("TextLabel")
                label.Parent = SectionFrame
                label.Size = UDim2.new(1,-20,0,20)
                label.BackgroundTransparency = 1
                label.TextColor3 = Color3.fromRGB(220,220,220)
                label.Text = text
                label.TextXAlignment = Enum.TextXAlignment.Left
                label.Font = Enum.Font.Gotham
                label.TextSize = 13
            end

            function section:AddParagraph(title, text)
                local titleLab = Instance.new("TextLabel")
                titleLab.Parent = SectionFrame
                titleLab.Size = UDim2.new(1,-20,0,18)
                titleLab.Text = title
                titleLab.BackgroundTransparency = 1
                titleLab.TextColor3 = Color3.fromRGB(72,205,96)
                titleLab.Font = Enum.Font.GothamBold
                titleLab.TextSize = 14
                titleLab.TextXAlignment = Enum.TextXAlignment.Left

                local par = Instance.new("TextLabel")
                par.Parent = SectionFrame
                par.Size = UDim2.new(1,-20,0,36)
                par.TextWrapped = true
                par.Text = text
                par.BackgroundTransparency = 1
                par.TextColor3 = Color3.fromRGB(180,180,180)
                par.Font = Enum.Font.Gotham
                par.TextSize = 13
                par.TextXAlignment = Enum.TextXAlignment.Left
            end

            table.insert(tab.Sections, section)
            return section
        end

        table.insert(self.Tabs, tab)
        return tab
    end

    return self
end

return YourOrion



function section:AddDropdown(opts)
    local drop = Instance.new("Frame")
    drop.Parent = SectionFrame
    drop.Size = UDim2.new(1,-20,0,32)
    drop.BackgroundColor3 = Color3.fromRGB(45,52,63)
    drop.BorderSizePixel = 0

    local label = Instance.new("TextLabel")
    label.Parent = drop
    label.Size = UDim2.new(1,-24,1,0)
    label.Position = UDim2.new(0,8,0,0)
    label.BackgroundTransparency = 1
    label.Text = opts.Name or "Dropdown"
    label.TextColor3 = Color3.fromRGB(230,230,230)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Font = Enum.Font.Gotham
    label.TextSize = 15

    local btn = Instance.new("TextButton")
    btn.Parent = drop
    btn.Size = UDim2.new(0,22,1,0)
    btn.Position = UDim2.new(1,-24,0,0)
    btn.BackgroundColor3 = Color3.fromRGB(41,46,54)
    btn.Text = "â–¼"
    btn.TextColor3 = Color3.fromRGB(150,150,150)
    btn.TextSize = 17
    btn.Font = Enum.Font.Gotham
    btn.BorderSizePixel = 0

    local optsFrame = Instance.new("Frame")
    optsFrame.Parent = drop
    optsFrame.Size = UDim2.new(1,0,0,0)
    optsFrame.Position = UDim2.new(0,0,1,0)
    optsFrame.BackgroundColor3 = Color3.fromRGB(47,53,62)
    optsFrame.BorderSizePixel = 0
    optsFrame.ClipsDescendants = true
    optsFrame.Visible = false

    local optsList = Instance.new("UIListLayout")
    optsList.Parent = optsFrame
    optsList.SortOrder = Enum.SortOrder.LayoutOrder

    local function setDropdownOpen(open)
        optsFrame.Visible = open
        if open then
            local count = #opts.Options
            optsFrame.Size = UDim2.new(1,0,0, math.max(22, 22*count))
        else
            optsFrame.Size = UDim2.new(1,0,0,0)
        end
    end

    btn.MouseButton1Click:Connect(function()
        setDropdownOpen(not optsFrame.Visible)
    end)

    for i,opt in ipairs(opts.Options or {}) do
        local optBtn = Instance.new("TextButton")
        optBtn.Parent = optsFrame
        optBtn.Size = UDim2.new(1,0,0,22)
        optBtn.BackgroundTransparency = 1
        optBtn.Text = tostring(opt)
        optBtn.TextColor3 = Color3.fromRGB(180,180,180)
        optBtn.Font = Enum.Font.Gotham
        optBtn.TextSize = 14
        optBtn.TextXAlignment = Enum.TextXAlignment.Left
        optBtn.MouseButton1Click:Connect(function()
            setDropdownOpen(false)
            if opts.Callback then opts.Callback(opt) end
        end)
    end
end

function section:AddSlider(opts)
    local sliderFrame = Instance.new("Frame")
    sliderFrame.Parent = SectionFrame
    sliderFrame.Size = UDim2.new(1,-20,0,38)
    sliderFrame.BackgroundColor3 = Color3.fromRGB(47,53,62)
    sliderFrame.BorderSizePixel = 0

    local sliderLabel = Instance.new("TextLabel")
    sliderLabel.Parent = sliderFrame
    sliderLabel.Position = UDim2.new(0,10,0,2)
    sliderLabel.Size = UDim2.new(1,-20,0,18)
    sliderLabel.BackgroundTransparency = 1
    sliderLabel.Text = (opts.Name or "Slider")..": "..tostring(opts.Default or opts.Min)
    sliderLabel.TextColor3 = Color3.fromRGB(210,210,210)
    sliderLabel.TextXAlignment = Enum.TextXAlignment.Left
    sliderLabel.Font = Enum.Font.Gotham
    sliderLabel.TextSize = 14

    local barBG = Instance.new("Frame")
    barBG.Parent = sliderFrame
    barBG.Position = UDim2.new(0,10,0,24)
    barBG.Size = UDim2.new(1,-40,0,10)
    barBG.BackgroundColor3 = Color3.fromRGB(35,40,49)
    barBG.BorderSizePixel = 0

    local barFill = Instance.new("Frame")
    barFill.Parent = barBG
    barFill.Size = UDim2.new(0,0,1,0)
    barFill.BackgroundColor3 = opts.Color or Color3.fromRGB(72,205,96)
    barFill.BorderSizePixel = 0

    local value = opts.Default or opts.Min or 0

    local function setSlider(v)
        v = math.clamp(v, opts.Min, opts.Max)
        value = v
        local pct = (v - opts.Min)/(opts.Max - opts.Min)
        barFill.Size = UDim2.new(pct,0,1,0)
        sliderLabel.Text = (opts.Name or "Slider")..": "..tostring(math.floor(v*1000)/1000).." "..(opts.ValueName or "")
        if opts.Callback then opts.Callback(v) end
    end

    barBG.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local mouse = game:GetService("Players").LocalPlayer:GetMouse()
            local conn
            conn = game:GetService("RunService").RenderStepped:Connect(function()
                local rel = mouse.X - barBG.AbsolutePosition.X
                local pct = math.clamp(rel/barBG.AbsoluteSize.X,0,1)
                local val = opts.Min + (opts.Max - opts.Min) * pct
                if opts.Increment then
                    val = math.floor(val / opts.Increment + 0.5) * opts.Increment
                end
                setSlider(val)
                if not mouse:IsMouseButtonPressed(Enum.UserInputType.MouseButton1) then
                    conn:Disconnect()
                end
            end)
        end
    end)
    setSlider(value)
end

function section:AddColorpicker(opts)
    local colorFrame = Instance.new("Frame")
    colorFrame.Parent = SectionFrame
    colorFrame.Size = UDim2.new(1,-20,0,36)
    colorFrame.BackgroundColor3 = Color3.fromRGB(47,53,62)
    colorFrame.BorderSizePixel = 0

    local colorLabel = Instance.new("TextLabel")
    colorLabel.Parent = colorFrame
    colorLabel.Position = UDim2.new(0,10,0,2)
    colorLabel.Size = UDim2.new(1,-36,0,18)
    colorLabel.BackgroundTransparency = 1
    colorLabel.Text = opts.Name or "Color"
    colorLabel.TextColor3 = Color3.fromRGB(200,200,200)
    colorLabel.TextXAlignment = Enum.TextXAlignment.Left
    colorLabel.Font = Enum.Font.Gotham
    colorLabel.TextSize = 14

    local colorBtn = Instance.new("TextButton")
    colorBtn.Parent = colorFrame
    colorBtn.Position = UDim2.new(1,-26,0,5)
    colorBtn.Size = UDim2.new(0,18,0,18)
    colorBtn.BackgroundColor3 = opts.Default or Color3.fromRGB(72,205,96)
    colorBtn.BorderSizePixel = 0
    colorBtn.Text = ""

    -- Simple picker: Klick auf den Button gibt random Farbe (kannst mit nem ColorPicker-Frame ersetzen)
    colorBtn.MouseButton1Click:Connect(function()
        local newColor = Color3.fromRGB(math.random(255),math.random(255),math.random(255))
        colorBtn.BackgroundColor3 = newColor
        if opts.Callback then opts.Callback(newColor) end
    end)
end

